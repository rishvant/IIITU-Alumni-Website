    <body>
    
        <%- include("navbar") %>

    <section class="section" id="trainers">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-heading">
                        <h2>Alumni <em>Users</em></h2>
                        <img src="assets/images/line-dec.png" alt="">
                        <!-- <p>Content</p> -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <form action="/search" method="GET">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search by name" name="search">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row">
                <% profiles.forEach((profile) => { %>
                <div class="col-lg-4">
                    <a href="/directory/<%= profile._id %>">
                    <div class="trainer-item">
                        <div class="image-thumb">
                            <center><img src="uploads/<%= profile.image %>" alt=""></center>
                        </div>
                        <div class="down-content">
                            <span><%= profile.branch %>, <%= profile.year %></span>
                            <h4><%= profile.name %></h4>
                            <ul>
                                <li><%= profile.batch %></li>
                            </ul>
                            <ul class="social-icons">
                                <li>
                                    <% if(profile.linkedin){ %>
                                    <a href="<%= profile.linkedin %>"><i class="fa fa-linkedin"></i></a>
                                    <% } %>
                                </li>
                                <li>
                                    <% if(profile.instagram){ %>
                                    <a href="<%= profile.instagram %>"><i class="fa fa-instagram"></i></a>
                                    <% } %>
                                </li>
                                <li>
                                    <% if(profile.github){ %>
                                    <a href="<%= profile.github %>"><i class="fa fa-github"></i></a>
                                    <% } %>
                                </li>
                                <li class="company">
                                    <%= profile.company %>
                                </li>
                            </ul>
                        </div>
                    </div></a>
                </div>
            <% }); %>
            </div>
        </div>
    </section>
        
    <%- include ("footer") %>

