<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Creating a Stunning Personal Profile Card with HTML and CSS</title>
    <link rel="stylesheet" type="text/css" href="/css/directory-profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    
        <link rel="icon" href="/img/Iiit-una-logo.png">
		
		<!-- Google Fonts -->
		<link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="/css/bootstrap.min.css">
		<!-- Font Awesome CSS -->
        <link rel="stylesheet" href="/css/font-awesome.min.css">
		<!-- icofont CSS -->
        <link rel="stylesheet" href="/css/icofont.css">
		<!-- Slicknav -->
		<link rel="stylesheet" href="/css/slicknav.min.css">
		<!-- Owl Carousel CSS -->
        <link rel="stylesheet" href="/css/owl-carousel.css">
		<!-- Datepicker CSS -->
		<link rel="stylesheet" href="/css/datepicker.css">
		<!-- Animate CSS -->
        <link rel="stylesheet" href="/css/animate.min.css">
		<!-- Magnific Popup CSS -->
        <link rel="stylesheet" href="/css/magnific-popup.css">
		
		<!-- Medipro CSS -->
        <link rel="stylesheet" href="/css/normalize.css">
        <link rel="stylesheet" href="/css/responsive.css">
        <link rel="stylesheet" href="/css/style.css">

</head>
<body>

    <%- include("navbar") %>

    <section class="profile-card">
    <div class="card-cont">
  <div class="left-container">
    <img src="/uploads/<%= user.image %>" alt="Profile Image">
    <h2 class="gradienttext"><%= user.name %></h2>
    <p><%= user.profession %></p>
    <div class="social">
        <% if(user.linkedin){ %>
        <a href="<%= user.linkedin %>"><i class="fa fa-linkedin-square" style="font-size:30px;color: #0072b1;"></i></a>
        <% } %>
        <% if(user.instagram){ %>
        <a href="<%= user.instagram %>"><i class="fa fa-instagram" style="font-size:30px;"></i></a>
        <% } %>
        <% if(user.github){ %>
        <a href="<%= user.github %>"><i class="fa fa-github" style="font-size:30px;color: white;"></i></a>
        <% } %>
    </div>
  </div>
  <div class="right-container">
    <h3 class="gradienttext" style="margin-top: 10%;">This Institute</h3>
    <div class="batch">
        <p class="batch-btn"><%= user.course %>, <%= user.year %>, <%= user.branch %></p>
    </div>
        <% if(user.company){ %>
    <div class="exp">
        <h3 class="gradienttext" style="margin-top: 10%;">Current Experience</h3>
        <p>
            Company: <%= user.company %>
        </p>
    </div>
        <% } %>
</div>
</div>
</section>

<%- include("footer") %>

