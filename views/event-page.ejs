<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/lightbox2@2.11.2/dist/css/lightbox.min.css">
    <link rel="stylesheet" href="/css/events-page.css">
</head>
<body>
    <div class="container">
        <div class="title">
            <h1><%= event.title %></h1>
        </div>
        
        <img src="../public/img/slider.jpg" class="title-img">

        <div class="inner">
            <div class="summary">
                <h3><%= event.summary %></h3>
            </div>

            <div class="date">
                Date: <%= event.date %>
            </div>

            <div class="detail">
                <%= event.detail %>
            </div>
        </div>

        <div class="gallery">
                <div class="section-title">
                    <h2>Gallery</h2>
                </div>
                <div class="main-gallery">
                    <% images.forEach(image => { %>
                        <a class="main-image" href="/uploads/<%= image.image %>" data-lightbox="image-gallery">
                            <img src="/uploads/<%= image.image %>" alt="image">
                        </a>
                    <% }); %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/lightbox2@2.11.2/dist/js/lightbox-plus-jquery.min.js"></script>
</body>
</html>