<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js">
    <link rel="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/directory-2.css">    
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row clearfix">
            <% profiles.forEach(profile => { %>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="card product_item">
                    <div class="body">
                        <div class="cp_img">
                            <img src="/uploads/<%= profile.image %>" alt="Product" class="img-fluid">
                        </div>
                        <div class="product_details">
                            <h5><%= profile.name %></h5>
                            <h6><%= profile.course %>, <%= profile.branch %>, <%= profile.year %></h6>
                            <ul class="product_price list-unstyled">
                                <li class="old_price">
                                    <% if(profile.linkedin){ %>
                                    <a href="<%= profile.linkedin %>"><i class="fa fa-linkedin-square" style="font-size:30px;color: #0072b1;"></i></a>
                                        <% } %>
                                </li>
                                <li class="old_price">
                                    <% if(profile.instagram){ %>
                                    <a href="<%= profile.instagram %>"><i class="fa fa-instagram" style="font-size:30px;"></i></a>
                                        <% } %>
                                </li>
                                <li class="old_price">
                                    <% if(profile.github){ %>
                                    <a href="<%= profile.github %>"><i class="fa fa-github" style="font-size:30px;color: black;"></i></a>
                                    <% } %>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>