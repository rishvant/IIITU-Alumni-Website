                        <div class="col-md-12"><label class="labels">Phone No.</label><input name="phone" type="tel" class="form-control" placeholder="enter phone" value=""></div>
                        <div class="col-md-12"><label class="labels">Batch</label><input name="batch" type="text" class="form-control" placeholder="enter batch" value=""></div>
