<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible"
		content="IE=edge">
	<meta name="viewport"
		content="width=device-width, 
				initial-scale=1.0">
	<title>GeeksForGeeks</title>
	<link rel="stylesheet" href="/css/admin-style.css">
    <link rel="stylesheet" href="/css/admin-gallery.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/lightbox2@2.11.2/dist/css/lightbox.min.css">
</head>

<body>

    <%- include("admin-navbar.ejs")  %>

		<div class="main">
			<div class="searchbar2">
				<input type="text"
					name=""
					id=""
					placeholder="Search">
				<div class="searchbtn">
				<img src=
"https://media.geeksforgeeks.org/wp-content/uploads/20221210180758/Untitled-design-(28).png"
						class="icn srchicn"
						alt="search-button">
				</div>
			</div>
			<h1>
				Manage Gallery
			</h1>
			<form action="/admin/gallery" method="POST" enctype="multipart/form-data">
				<input type="file" name="image" accept=".jpg, .jpeg, .png" required>            
			<input id="btn-save" class="btn btn-primary profile-button" type="submit" href="/admin-gallery">
				</form>
            <div class="gallery">
				<% Images.forEach(images => { %>
                <div class="inner">
                <a class="image" href="image1.png" data-lightbox="image-gallery" data-title="Image 1">
                    <img src="/uploads/<%= images.image %>" alt="Image">
                </a>
                <span class="remove-icon" onclick="removeImage('<%= images._id %>')">X</span>
            </div>
			<% }); %> 
        </div>
	</div>

    <script src="https://cdn.jsdelivr.net/npm/lightbox2@2.11.2/dist/js/lightbox-plus-jquery.min.js"></script>
	<script src="/js/admin-index.js"></script>
</body>
</html>
